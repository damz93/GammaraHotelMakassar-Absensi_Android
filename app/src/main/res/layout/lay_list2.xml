<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#71450A"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:background="#3C2E1C"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="25dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:id="@+id/tx_refresh"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="REFRESH"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="Finger No : "
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/tx_finger"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:text="FINGERNYA"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name :"
                android:textSize="15sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tx_nama"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NAMANYA"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Department :"
                android:textSize="15sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tx_dept"
                android:textStyle="bold|italic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="NAMANYA"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Filter Date:"
                android:textSize="15sp"
                android:textColor="#FFFFFF" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:id="@+id/ed_tgl1"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:editable="false"
                android:textSize="15sp"
                android:background="@drawable/wr1"
                android:textColorHint="#F6F2F2"
                android:hint="yyyy/MM/dd"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" - "
                android:textSize="15sp"
                android:textColor="#FFFFFF" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:id="@+id/ed_tgl2"
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="@drawable/wr1"
                android:textColorHint="#F6F2F2"
                android:editable="false"
                android:hint="yyyy/MM/dd"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_proses"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wr2"
            android:text="PROCESS"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ln_tgl_jam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warna2"
                android:gravity="center_horizontal"
                android:text="Date"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warna2"
                android:gravity="center_horizontal"
                android:text="Time"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warna2"
                android:gravity="center_horizontal"
                android:text="In/Out"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_warna2"
                android:gravity="center_horizontal"
                android:text="Finger"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/list_absen"
        android:layout_width="380dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:alpha="0.7"
        android:layout_height="wrap_content" >
        <com.google.android.gms.ads.AdView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:visibility="visible"
            android:id="@+id/adview_"
            ads:adSize = "BANNER"
            ads:adUnitId = "@string/id_iklanyaaa" />
        <Button
            android:id="@+id/btn_cus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wr3"
            android:text="Back"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>